# Feature Flags
VITE_ENABLE_AI_GENIE=true
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_HEATMAPS=true

# Development Settings
VITE_DEV_MODE=true
VITE_LOG_LEVEL=info